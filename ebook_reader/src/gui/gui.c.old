ebk_error_t ebk_gui_show_menu(ebk_gui_t gui, ebk_books_list_t books,
                              int book_i) {

  /**
     @todo Figure out how inject link to the drawio image.

     To understand the layout best is to see the picture available here:
           ...

  */
  int bar_x_len = lv_display_get_horizontal_resolution(NULL);
  int bar_y_len = 40;
  /* static uint32_t btn_cnt = 1; */
  /* static lv_obj_t * main_page; */
  static lv_obj_t *bar;
  bar = lv_menu_create(lv_screen_active());
  lv_obj_set_pos(bar, 0, 0); // Set menu at the beginning of display + bar  
  lv_obj_set_size(bar, bar_x_len,
                  bar_y_len);

  int menu_x_len = bar_x_len;
  int menu_y_len = lv_display_get_vertical_resolution(NULL) - bar_y_len;  
  
  static lv_obj_t *menu;
  menu = lv_menu_create(lv_screen_active());
  lv_obj_set_size(menu, menu_x_len,
                  menu_y_len);
  lv_obj_set_pos(menu, 0, bar_y_len); // Set menu at the beginning of display + bar

  static int32_t row_dsc[] = {150, 150, 150, LV_GRID_TEMPLATE_LAST};
  static int32_t col_dsc[] = {80, 80, 80, LV_GRID_TEMPLATE_LAST};
  lv_obj_t *books_table = lv_obj_create(menu);
  lv_obj_set_grid_dsc_array(books_table, col_dsc, row_dsc);
  lv_obj_set_size(books_table, menu_x_len, menu_y_len);
  lv_obj_set_style_pad_row((lv_obj_t *) books_table, 10, 0);
  lv_obj_set_style_pad_column((lv_obj_t *) books_table, 10, 0);
  

  for (int y = 0; y < 3; y++) {
    for (int x = 0; x < 3; x++) {
      lv_obj_t *lv_book = ebk_gui_create_book(NULL, true, books_table);
      lv_obj_set_grid_cell(lv_book, LV_GRID_ALIGN_START, x, 1,
                           LV_GRID_ALIGN_START, y, 1);
    }
  }

  return 0;
};

